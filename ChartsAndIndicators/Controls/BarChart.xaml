<UserControl x:Class="Controls.BarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <DockPanel Background="Wheat">
            <TextBlock DockPanel.Dock="Top" Height="14" Text="{Binding ChartName}"></TextBlock>
            <Grid>
                <Canvas x:Name="MainCanvas" MinWidth="450" MinHeight="350" />
            </Grid>
        </DockPanel>     
    </Grid>
</UserControl>
